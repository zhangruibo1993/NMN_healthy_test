/* pages/mine/mine.wxss */
.login-btn {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-left: 0 !important;
  margin-right: 0 !important;
  width: 100% !important;
  height: 180rpx;
  border-radius: 20rpx;
  margin-top: 100rpx;
  background-color: #fff;
  color: #07C160;
}
.login {
  display: flex;
  justify-content: center;
  align-items: center;
}
.user {
  height: 300rpx;
  padding-top: 50rpx;
  background-color: #ffffff;
  box-shadow: 0 3rpx 0 #F8F9FB;
}
.userinfo {
  display:  flex;
  align-items: center;
  justify-content: space-between;
  padding-right: 20rpx;
}
.userinfo-item {
  display: flex;
  margin-left: 50rpx;
}
.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 20rpx;
}
.user-detail {
  display: flex;
  align-items: center;
  line-height: 55rpx;
}
.gender {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}
.viplevel {
  color: #7C7C7C;
  font-size: 28rpx;
}
.bonusinfo {
  display: flex;
  justify-content: center;
  margin-top: 20rpx;
}
.out-btn {
  border: 1rpx solid;
  padding: 5rpx 20rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
  line-height: 28rpx;
}
.bonus-item {
  flex: 1;
  text-align: center;
  color: #6e6464;
}
.number {
  font-weight: bold;
  font-size: 32rpx;
}
.bonus-label {
  /* color: #CCCCCC; */
  font-size: 28rpx;
}
.money {
  color: #C2C5D6;
}
.block {
  margin: 0 auto;
  width: 100%;
  height: 240rpx;
  margin-top: 30rpx;
  background-color: #fff;
  padding: 20rpx;
}
.block-title {
  height: 30rpx;
  line-height: 30rpx;
  margin-bottom: 20rpx;
}
.block-title-text {
  font-weight: bold;
  letter-spacing: 5rpx;
}
.order-all {
  float: right;
  display: flex;
  align-items: center;
  height: 30rpx;
  line-height: 30rpx;
}
.order-all-text {
  font-size: 30rpx;
  color: #7C7C7C;
}
.block-info {
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-top: 50rpx;
}
.order-item {
  text-align: center;
  position: relative;
}
.order-text {
  font-size: 28rpx;
}
.order-count {
  position: absolute;
  right: -10rpx;
  top: -30rpx;
  font-size: 28rpx;
  color: #ffffff;
  background-color: #F55B25;
  padding: 0 10rpx;
  border-radius: 30rpx;
  min-width: 50rpx;
}
.icon-order {
  width: 50rpx;
  height: 50rpx;
}
.tools-info {
  display: flex;
}
.tools {
  margin-top: 30rpx;
}
.icon-tools {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
.row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  border-bottom: 1rpx solid #E5E5E5;
  padding: 10rpx 20rpx;
  height: 100rpx;
}
.tool-label {
  display: flex;
  align-items: center;
}