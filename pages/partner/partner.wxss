/* pages/partner/partner.wxss */
.user-info {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  align-items: center;
  border-bottom: 5rpx dotted #07C160;
  background-color: #fff;
}
.user-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 60rpx;
  margin-right: 20rpx;
}
.reward {
  font-weight: bold;
}
.info-detail {
  display: flex;
}
.viplevel {
  color: #7C7C7C;
  font-size: 28rpx;
}
.info {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
}
.headimage {
  width: 50rpx;
  height: 50rpx;
}
.task {
  background-color: #fff;
  padding: 0 20rpx;
}
.task-title {
  padding-top: 20rpx;
  margin-bottom: 20rpx;
  font-size: 40rpx;
  font-weight: bold;
  color: #DF311E;
}
.level {
  display: flex;
}
.task-list {
  display: flex;
  justify-content: space-between;
  border-top: 1rpx solid #E5E5E5;
  align-items: center;
  height: 100rpx;
}
.task-row {
  text-align: center;
}
.title {
  margin: 15rpx 0;
  font-size: 30rpx;
  font-weight: bold;
}
.walfare {
  margin-left: 30rpx;
  font-size: 28rpx;
}
.label {
  font-weight: bold;
}
.walfare-info {
  padding: 0 20rpx;
  margin-bottom: 30rpx;
}
.walfare-detail {
  margin-left: 20rpx;
  color: #888888;
}